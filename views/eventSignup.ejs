  <script>
  document.addEventListener("DOMContentLoaded", () => {
  // Get references to the sewing and machines fields sections
  const sewingFields = document.getElementById('sewing_fields'); // Container for sewing-related fields
  const machinesFields = document.getElementById('machines_fields'); // Container for machine-related fields

  // Get all radio buttons for the "event_type" input group
  const eventTypeInputs = document.querySelectorAll('input[name="event_type"]');

  /**
   * Toggles the visibility of the sewing and machines fields based on the selected event type.
   * If the selected event type is "Sewing" or "Both", the fields will be displayed and required.
   * Otherwise, the fields will be hidden and not required.
   */
  function toggleSewingFields() {
    // Get the value of the currently selected radio button
    const selectedValue = document.querySelector('input[name="event_type"]:checked').value;

    // Check the selected value to determine visibility and requirement settings
    if (selectedValue === 'Sewing' || selectedValue === 'Both') {
      // Show the sewing and machines fields
      sewingFields.style.display = 'block';
      machinesFields.style.display = 'block';

      // Make the related input fields required
      document.getElementById('number_sewers').required = true;
      document.getElementById('machines_volunteered').required = true;
    } else {
      // Hide the sewing and machines fields
      sewingFields.style.display = 'none';
      machinesFields.style.display = 'none';

      // Remove the required attribute from the related input fields
      document.getElementById('number_sewers').required = false;
      document.getElementById('machines_volunteered').required = false;
    }
  }

  // Add a change event listener to each radio button to handle field toggling
  eventTypeInputs.forEach(input => {
    input.addEventListener('change', toggleSewingFields);
  });

  // Initialize the visibility and requirement settings based on the default selection
  toggleSewingFields();
});

  </script>
  <script>

    document.addEventListener("DOMContentLoaded", () => {
      // Select the phone input field by its ID
      const phoneInput = document.getElementById("requestee_phone");

      // Add an input event listener to the phone input field
      phoneInput.addEventListener("input", function () {
        // Remove all non-digit characters from the input value
        let value = this.value.replace(/\D/g, ""); 

        // Format the phone number based on the number of digits entered
        if (value.length > 3 && value.length <= 6) {
          // Format the input as 'XXX-XXX' when there are 4 to 6 digits
          value = `${value.slice(0, 3)}-${value.slice(3)}`;
        } else if (value.length > 6) {
          // Format the input as 'XXX-XXX-XXXX' when there are more than 6 digits
          value = `${value.slice(0, 3)}-${value.slice(3, 6)}-${value.slice(6, 10)}`;
        }

        // Update the value of the input field with the formatted phone number
        this.value = value;
      });
    });

  </script>
