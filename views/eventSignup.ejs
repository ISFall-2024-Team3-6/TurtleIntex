  <script>
    document.addEventListener("DOMContentLoaded", async () => {
  try {
    const response = await fetch('/unavailable-dates'); // Fetch unavailable dates
    if (!response.ok) {
      throw new Error("Failed to fetch unavailable dates");
    }

    const unavailableDates = await response.json();
    console.log("Unavailable Dates Fetched:", unavailableDates);

    // Normalize dates to "YYYY-MM-DD" format (ignoring time)
    const parsedDates = unavailableDates.map(date => {
      const d = new Date(date); // Parse the ISO string
      return d.toISOString().split('T')[0]; // Get the date part in "YYYY-MM-DD" format
    });

    console.log("Parsed Dates for Flatpickr:", parsedDates);

    // Initialize Flatpickr with normalized dates
    const flatpickrOptions = {
      disable: parsedDates,
      dateFormat: "Y-m-d",
    };

    flatpickr("#event_date", flatpickrOptions);
    flatpickr("#back_up_date", flatpickrOptions);
    flatpickr("#back_up_date_2", flatpickrOptions);
  } catch (error) {
    console.error("Error initializing Flatpickr with unavailable dates:", error);
  }
});

  // Define an array of valid times
  const validTimes = [
