    </form>

    <form action="/About/contact" method="GET" style="display:inline;">
      <button type="submit">Contact Us</button>
    </form>

    <form action="/About/faq" method="GET" style="display:inline;">
      <button type="submit">FAQs</button>
    </form>

    <form action="/About/ourTech" method="GET" style="display:inline;">
