<!DOCTYPE html>
<html>
<head>
  <title>Events Maintenance</title>
  <style>
    table {
      width: 80%;
      margin: 20px auto;
      border-collapse: collapse;
      font-size: 10px; /* Reduce the font size of the table */
    }
    th, td {
      border: 1px solid #ddd;
      padding: 5px; /* Reduce the padding to decrease row height */
      text-align: center;
      line-height: 1.2; /* Adjust line height for smaller rows */
    }
    th {
      background-color: #F2F2F2;
      font-weight: bold;
    }
    button {
      padding: 4px 8px; /* Adjust button size */
      margin: 2px;
      font-size: 12px; /* Adjust button font size */
      cursor: pointer;
    }
  </style>
</head>
<body>
    <h5>This will be the Events Maintenance page</h5>
    <!-- first thing you HAVE IS A FORM, SO MAKE SURE TO HAVE YOUR INPUTS NAMED -->
  <h1 style="text-align: center;">Edit Events</h1>
  <form action="/events/<%= event.id %>" method="POST">
    <!-- calling a route to edit, has a parameter called id -->
    <!-- you can now pass the record Number through, so you pass it back as a PARAMETER -->
    <!-- so you can find the record and update it now -->
    

    <!-- Event Name -->
    <label for="event_name">Event Name</label> <!-- CHANGE THESE NAMES TO WHAT THE COLUMN IS IN THE DATABASE-->
    <input type="text" id="event_name" name="event_name" value="<%= events.event_name %>">


    <!-- Event Description (Radio Buttons) -->
    <label>Event Description</label> <!-- CHANGE THESE NAMES TO WHAT THE COLUMN IS IN THE DATABASE-->
    <label>
      <input type="radio" name="description" value="S" <%= events.description === 'M' ? 'checked' : '' %>> Sewing
    </label>
    <label>
      <input type="radio" name="description" value="NS" <%= events.description === 'F' ? 'checked' : '' %>> Non-Sewing
    </label>
    <label>
      <input type="radio" name="description" value="B" <%= events.description === 'U' ? 'checked' : '' %>> Both
    </label>


    <!-- Date of the Event -->
    <label for="event_date">Event Date</label> <!-- CHANGE THESE NAMES TO WHAT THE COLUMN IS IN THE DATABASE-->
    <input type="date" id="event_date" name="event_date" value="<%= events.event_date.toISOString().split('T')[0] %>" required>


    <!-- BackUp Date 1 of the Event -->
    <label for="back_up_date_1">Backup 1 Event Date</label> <!-- CHANGE THESE NAMES TO WHAT THE COLUMN IS IN THE DATABASE-->
    <input type="date" id="back_up_date_1" name="back_up_date_1" value="<%= events.back_up_date_1.toISOString().split('T')[0] %>">


    <!-- BackUp Date 2 of the Event -->
    <label for="back_up_date_2">Backup 2 Event Date</label> <!-- CHANGE THESE NAMES TO WHAT THE COLUMN IS IN THE DATABASE-->
    <input type="date" id="back_up_date_2" name="back_up_date_2" value="<%= events.back_up_date_2.toISOString().split('T')[0] %>">
    

    <!-- Event Start Time -->
    <label for="event_start_time">Select a start time for the event:</label> <!-- CHANGE THESE NAMES TO WHAT THE COLUMN IS IN THE DATABASE-->
    <input type="time" id="event_start_time" name="event_start_time" min="08:00" max="19:00">


    <!-- Event Duration Projected -->
    <label for="event_duration_projected">How long will this event last?</label> <!-- CHANGE THESE NAMES TO WHAT THE COLUMN IS IN THE DATABASE-->
    <input type="number" id="event_duration_projected" name="event_duration_projected" value="<%= events.event_duration_projected %>" required>


    <!-- Event Duration Actual -->
    <label for="event_duration_actual">How long did this event last?</label> <!-- CHANGE THESE NAMES TO WHAT THE COLUMN IS IN THE DATABASE-->
    <input type="number" id="event_duration_actual" name="event_duration_actual" value="<%= events.event_duration_actual || events.event_duration_projected %>" required>
    <!-- It will use the event_duration_actual value if it exists; otherwise, it will default to the event_duration_projected value. -->


    <!-- Event Address -->
    <label for="event_address">Event Address</label> <!-- CHANGE THESE NAMES TO WHAT THE COLUMN IS IN THE DATABASE-->
    <input type="text" id="event_address" name="event_address" value="<%= events.event_address %>" required>


    <!-- Expected Number of Attendees --> 
    <label for="event_num_participants_projected">Number of Expected Participants</label> <!-- CHANGE THESE NAMES TO WHAT THE COLUMN IS IN THE DATABASE-->
    <input type="number" id="event_num_participants_projected" name="event_num_participants_projected" value="<%= events.event_num_participants_projected %>" required>


    <!-- Actual Number of Attendees -->
    <label for="event_num_participants_actual">Number of Actual Participants</label>
    <input type="number" id="event_num_participants_actual" name="event_num_participants_actual" value="<%= events.event_num_participants_actual || events.event_num_participants_projected %>" required>
    <!-- It will use the event_num_participants_actual value if it exists; otherwise, it will default to the event_num_participants_projected value. -->


    <!-- Event Contact Name -->
    <label for="requestee_name">What is a good contact name?</label> <!-- CHANGE THESE NAMES TO WHAT THE COLUMN IS IN THE DATABASE-->
    <input type="text" id="requestee_name" name="requestee_name" value="<%= events.requestee_name %>" required>


    <!-- Event Contact Phone Number -->
    <label for="requestee_phone">What is a good phone number?</label> <!-- CHANGE THESE NAMES TO WHAT THE COLUMN IS IN THE DATABASE-->
    <input type="number" id="requestee_phone" name="requestee_phone" value="<%= events.requestee_phone %>" required>


    <!-- Event Contact Email -->
    <label for="requestee_email">What is a good email?</label> <!-- CHANGE THESE NAMES TO WHAT THE COLUMN IS IN THE DATABASE-->
    <input type="text" id="requestee_email" name="requestee_email" value="<%= events.requestee_email %>" required>
    

    <!-- Jen Shares Story (Checkbox) -->
    <label for="jen_story"> <!-- CHANGE THESE NAMES TO WHAT THE COLUMN IS IN THE DATABASE-->
      <input type="checkbox" id="jen_story" name="jen_story" value="true" <%= events.share_story ? 'checked' : '' %>>
      Check this box if you would like Jen to share her story! 
    </label>





    <!-- SHOULD WE ADD THESE? OR HOW SHOULD WE HANDLE THESE -> THEY ARE NOT ON THE OG EVENT REQUEST FORM -->

    <!-- Pockets Made -->
    <label for="pockets">How many pockets were made?</label> <!-- CHANGE THESE NAMES TO WHAT THE COLUMN IS IN THE DATABASE-->
    <input type="number" id="pockets" name="pockets" value="<%= events.pockets %>" required>

    <!-- Collars Made -->
    <label for="collars">How many collars were made?</label> <!-- CHANGE THESE NAMES TO WHAT THE COLUMN IS IN THE DATABASE-->
    <input type="number" id="collars" name="collars" value="<%= events.collars %>" required>

    <!-- Envenlopes Made -->
    <label for="envenlopes">How many envenlopes were made?</label> <!-- CHANGE THESE NAMES TO WHAT THE COLUMN IS IN THE DATABASE-->
    <input type="number" id="envenlopes" name="envenlopes" value="<%= events.envenlopes %>" required>

    <!-- Vests Made -->
    <label for="vests">How many vests were made?</label> <!-- CHANGE THESE NAMES TO WHAT THE COLUMN IS IN THE DATABASE-->
    <input type="number" id="vests" name="vests" value="<%= events.vests %>" required>

    <!-- Total products (not completed, just completed individual pieces) -->
    <label for="event_products_produced">How many total individual pieces were made?</label> <!-- CHANGE THESE NAMES TO WHAT THE COLUMN IS IN THE DATABASE-->
    <input type="number" id="event_products_produced" name="event_products_produced" value="<%= events.event_products_produced %>" required>

    <!-- Completed Products -->
    <label for="completed_products">How many completed products were made?</label> <!-- CHANGE THESE NAMES TO WHAT THE COLUMN IS IN THE DATABASE-->
    <input type="number" id="completed_products" name="completed_products" value="<%= events.completed_products %>" required>

    

    <!-- Submit Button always goes at the end of a form!!-->
    <button type="submit">Save Changes</button>
  
  </form>
</body>
</html>