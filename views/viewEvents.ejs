        <th>Vests In Progress</th>
        <th>Vests Finished</th>
        <th>Completed Products</th>
      </tr>
    </thead>
    <tbody>
      <% if (upcomingEvents.length > 0) { %>
        <% upcomingEvents.forEach(row => { %>
          <tr>
            <td><%= row.event_id %></td>
            <td><%= row.contact_first_name %></td>
