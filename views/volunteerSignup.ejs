<!DOCTYPE html>
<html>
<head>
  <title>Volunteer Sign Up</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f9f9f9;
      margin: 0;
      padding: 0;
    }

    h5 {
      text-align: center;
      font-size: 1.2em;
      margin-top: 20px;
    }

    form {
      width: 60%;
      margin: 20px auto;
      background: #fff;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    label {
      display: block;
      margin-bottom: 5px;
      font-weight: bold;
      color: #333;
    }

    input[type="text"], input[type="number"], select {
      width: 100%;
      padding: 8px;
      margin-bottom: 15px;
      border: 1px solid #ccc;
      border-radius: 5px;
      font-size: 14px;
    }

    input[type="radio"] {
      margin-right: 5px;
    }

    .radio-group {
      margin-bottom: 15px;
    }

    button {
      display: block;
      width: 100%;
      background-color: #4CAF50;
      color: white;
      padding: 10px;
      border: none;
      border-radius: 5px;
      font-size: 16px;
      cursor: pointer;
      text-align: center;
    }

    button:hover {
      background-color: #45a049;
    }

    @media (max-width: 768px) {
      form {
        width: 90%;
      }
    }
  </style>
</head>
<body>
    <h5>This will be the volunteer sign up page</h5>
    <form action="/volunteerSignup/" method="POST">

      <label for="first_name">First Name</label>
      <input type="text" id="first_name" name="first_name" required oninput="this.value = this.value.toUpperCase()">

      <label for="last_name">Last Name</label>
      <input type="text" id="last_name" name="last_name" required oninput="this.value = this.value.toUpperCase()">

      <label for="volunteerEmail">Email</label>
      <input type="text" id="volunteerEmail" name="volunteerEmail" oninput="this.value = this.value.toUpperCase()">

      <label for="volunterPhone">Phone Number</label>
      <input type="text" id="volunteerPhone" name="volunteerPhone" required>

      <label for="volunteerStreetAddress">Street Address</label>
      <input type="text" id="volunteerStreetAddress" name="volunteerStreetAddress" required oninput="this.value = this.value.toUpperCase()">

      <label for="volunteerCity">City</label>
      <input type="text" id="volunteerCity" name="volunteerCity" required oninput="this.value = this.value.toUpperCase()">

      <label for="volunteerState">State</label>
      <select name="volunteerState" id="state">
          <% states.forEach(function(state) { %>
              <option value="<%= state %>"><%= state %></option>
          <% }); %>
          </select>

      <label for="volunteerZip">Zipcode</label>
      <input type="text" id="volunteerZip" name="volunteerZip" required>

      <label>Referral Method:</label>
      <label>
        <input type="radio" name="volunteerReferral" value="website" > Website
      </label>
      <label>
        <input type="radio" name="volunteerReferral" value="friend" > Friend
      </label>
      <label>
        <input type="radio" name="volunteerReferral" value="socialMedia" > Social Media
      </label>
      <label>
        <input type="radio" name="volunteerReferral" value="other" > Other
      </label>

      <label for="volunteerHours">Hours Willing to Work (per Week)</label>
      <input type="number" id="volunteerHours" name="volunteerHours" min="3" max="10" >

      <label for="volunteerSewing">Sewing Experience (On a Scale of 1 - 10)</label>
      <input type="number" min="1" max="10" id="volunteerSewing" name="volunteerSewing" required >

      <button>Submit</button>
    </form>
</body>
</html>
