  <!-- Volunteer Form -->
   <!-- This form will receive each of the fields we keep track of in our database, other than their ID (which is auto-
    generated), their admin status//role, and their username//password (these will be determined after management approves
    the volunteer) -->
    <!-- Each of these fields contains information that management wants to keep track of for each volunteer, which
     is why each is required -->
<div class="container mt-5 pt-5">
  <h1>Volunteer Sign Up</h1>
      <form action="/volunteerSignup/" method="POST">


      <div class="mb-3 row">
        <label for="volunteer_first_name" class="col-sm-2 col-form-label">First Name</label>
        <input type="text" id="volunteer_first_name" name="volunteer_first_name" required oninput="this.value = this.value.toLowerCase()">
      </div>

    <div class="mb-3 row">
    <label for="volunteer_last_name" class="col-sm-2 col-form-label">Last Name</label>
    <input type="text" id="volunteer_last_name" name="volunteer_last_name" required oninput="this.value = this.value.toLowerCase()">
    </div>

    <div class="mb-3 row">
    <label for="volunteer_email" class="col-sm-2 col-form-label">Email</label>
    <input type="text" id="volunteer_email" name="volunteer_email" required oninput="this.value = this.value.toLowerCase()">
    </div>

    <div class="mb-3 row">
    <label for="volunteer_phone" class="col-sm-2 col-form-label">Phone Number</label>
    <input type="text" id="volunteer_phone" name="volunteer_phone" required>
    </div>

    <div class="mb-3 row">
    <label for="volunteer_address" class="col-sm-2 col-form-label">Street Address</label>
    <input type="text" id="volunteer_address" name="volunteer_address" required oninput="this.value = this.value.toLowerCase()">
    </div>

    <div class="mb-3 row">
    <label for="volunteer_city" class="col-sm-2 col-form-label">City</label>
    <input type="text" id="volunteer_city" name="volunteer_city" required oninput="this.value = this.value.toLowerCase()">
    </div>

    <div class="mb-3 row">
      <label for="volunteer_state" class="form-label">State</label>
      <div class="col-sm-10">
      <select name="volunteer_state" id="volunteer_state" required>
          <% states.forEach(function(state) { %>
              <option value="<%= state %>"><%= state %></option>
          <% }); %>
      </select>
      </div>
    </div>

    <div class="mb-3 row">
    <label for="volunteer_zip" class="col-sm-2 col-form-label">Zipcode</label>
    <input type="number" id="volunteer_zip" name="volunteer_zip" required>
    </div>

    <div class="mb-3 row">
      <label class="form-label">Referral Method:</label>
      <label>
        <input type="radio" name="volunteer_referral" value="online" required> Online
      </label>
      <label>
        <input type="radio" name="volunteer_referral" value="word_of_mouth" required> Word Of Mouth
      </label>
      <label>
        <input type="radio" name="volunteer_referral" value="other" required> Other
      </label>
    </div>

    <div class="mb-3 row">
    <label for="volunteer_willing_hours">Hours Willing to Work (per Month)</label>
    <input type="number" id="volunteer_willing_hours" name="volunteer_willing_hours" max="40" required>
    </div>

    <div class="mb-3 row">
    <label class="form-label">Sewing Experience:</label>
    <label>
      <input type="radio" name="volunteer_sewing_level" value="beginner" required> Beginner
    </label>
    <label>
      <input type="radio" name="volunteer_sewing_level" value="intermediate" required> Intermediate
    </label>
    <label>
      <input type="radio" name="volunteer_sewing_level" value="advanced" required> Advanced
    </label>
    </div>

    <div class="mb-3 row">
    <label class="form-label">Preferred Method of Contact:</label>
    <label>
      <input type="radio" name="volunteer_preferred_contact" value="phone" required> Phone
    </label>
    <label>
      <input type="radio" name="volunteer_preferred_contact" value="email" required> Email
    </label>
    </div>

    <div class="mb-3 form-check">
    <label for="volunteer-lead">
      <input class="form-check-input" type="checkbox" id="volunteer_lead" name="volunteer_lead" value="true">
      Are you willing to be a Lead?<br>
      <span style="font-size: 75%;">This means you will help to direct events requested by participants. You will not be asked to coordinate events, but may be asked to help transport materials and communicate with other volunteers.</span>
    </label>
    </div>

    <!-- This button will not only submit the volunteer sign up form, but will also notify the user that their submission
     is being processed as they are routed back to the home page -->
    <button type="submit" class="btn btn-success btn-lg" 
    onclick="return confirm('Your Submission is Being Processed!');">Submit</button>
  </form>
