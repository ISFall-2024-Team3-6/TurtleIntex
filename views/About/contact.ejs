     /* Chat Icon */
  .chat-icon {
          position: fixed;
          bottom: 20px;
          right: 20px;
          font-size: 36px;
          cursor: pointer;
          background-color: #4CAF50;
          color: white;
          border-radius: 50%;
          padding: 15px;
          box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
          transition: background-color 0.3s ease;
      }

      .chat-icon:hover {
          background-color: #45a049;
      }

      /* Chat Box */
      .chat-box {
          position: fixed;
          bottom: 70px;
          right: 20px;
          width: 300px;
          max-width: 80%;
          background-color: #fff;
          border-radius: 8px;
          box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
          padding: 15px;
          display: none;
          z-index: 999;
      }

      #chatContent {
          height: 250px;
          overflow-y: auto;
          margin-bottom: 15px;
      }

      #chatForm {
          display: flex;
          gap: 10px;
      }

      #userInput {
          flex-grow: 1;
          padding: 10px;
          border: 1px solid #ccc;
          border-radius: 4px;
      }

      .button-chat {
          padding: 10px 15px;
          background-color: #4CAF50;
          color: white;
          border: none;
          border-radius: 4px;
          cursor: pointer;
          transition: background-color 0.3s ease;
      }

      .chat-button:hover {
          background-color: #45a049;
      }

      /* Message bubble */
      .user-message, .bot-message {
          padding: 10px;
          margin-bottom: 10px;
          border-radius: 10px;
          max-width: 80%;
      }

      .user-message {
          background-color: #DCF8C6;
          align-self: flex-end;
          margin-left: auto;
      }

      .bot-message {
          background-color: #f1f1f1;
          align-self: flex-start;
          margin-right: auto;
      }
  </style>
</head>
